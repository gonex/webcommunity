<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	.save-button {
	  margin-top:6px;
	}		

	</ui:style>
	<g:HTMLPanel>
		<h2>Mine oplysninger</h2>
		<p>
		<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
			<g:VerticalPanel width="625px" horizontalAlignment="ALIGN_RIGHT">
				<g:FlexTable ui:field="editUserTable" width="100%"/>
				<g:Button width="84px" ui:field="updateButton" styleName="{style.save-button}" visible="true" >Gem</g:Button>
				<g:Button width="84px" ui:field="createButton" styleName="{style.save-button}" visible="false" >Opret ny</g:Button>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		</p>
	</g:HTMLPanel>
</ui:UiBinder> 