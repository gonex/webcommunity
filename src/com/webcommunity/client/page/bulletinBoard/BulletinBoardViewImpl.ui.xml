<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	.add-button {
	  margin-top:0px;
	  margin-bottom:35px;
	  margin-left:0px;
	  margin-right:0px;
	}		

	</ui:style>
	<g:HTMLPanel>
	    <h2>Opslagstavle</h2>
		<p>
		<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
   			<g:VerticalPanel width="625px" horizontalAlignment="ALIGN_LEFT">
				
				<g:Button width="94px" height="32px" ui:field="addDialog" styleName="{style.add-button}" visible="false" >Nyt opslag</g:Button>
   			    
				<g:FlexTable ui:field="postingsTable" width="100%"/>
			    				
				<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
					<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
				    	<g:Anchor ui:field="newerPostings" text="&lt;&lt;" styleName="navigation-link" visible="false" ></g:Anchor>
					</g:VerticalPanel>
				    									    
					<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
						<g:Anchor ui:field="olderPostings" text="&gt;&gt;" styleName="navigation-link" visible="false" ></g:Anchor>
					</g:VerticalPanel>
				</g:HorizontalPanel>
								
			</g:VerticalPanel>
			
		</g:HorizontalPanel>
		</p>
	</g:HTMLPanel>
</ui:UiBinder> 